@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row">
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="col-4">
        <h3 class="text-center">@ViewData["Title"]</h3>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Username" class="form-control" placeholder="Please choose your username." />
                <label asp-for="Input.Username" class="form-label"></label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Your First Name" />
                <label asp-for="Input.FirstName" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Your Last Name" />
                <label asp-for="Input.LastName" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" placeholder="Your Address" />
                <label asp-for="Input.Address" class="form-label"></label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.InitialPropertyCost" class="form-control" readonly />
                <label asp-for="Input.InitialPropertyCost" class="form-label"></label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.CurrentPropertyCost" class="form-control" readonly />
                <label asp-for="Input.CurrentPropertyCost" class="form-label"></label>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-dark identity_text_color">Save</button>
        </form>
    </div>
    <div class="col-8">
        <div class="row">
            <h3 class="text-center">List of Properties</h3>
            <div class="col-4">
                @foreach (var property in Model.Properties)
                {
                    <div class="border border-2 border-end-0 rounded-start mb-1">
                        <h4 class="text-center"><u>@Html.DisplayNameFor(model => property.Name)</u></h4>
                        <ul class="text-center list-group list-group-flush">
                            <li class="list-group-item">@Html.DisplayNameFor(model => property.Type)</li>
                            <li class="list-group-item">@Html.DisplayNameFor(model => property.PurchaseDate)</li>
                            <li class="list-group-item">@Html.DisplayNameFor(model => property.InitialCost)</li>
                            <li class="list-group-item">@Html.DisplayNameFor(model => property.priceLossPeriod)</li>
                            <li class="list-group-item">@Html.DisplayNameFor(model => property.PriceLoss)</li>
                            <li class="list-group-item">@Html.DisplayNameFor(model => property.CurrentCost)</li>
                        </ul>
                    </div>
                }
            </div>
            <div class="col-8">
                @foreach (var property in Model.Properties)
                {
                    <div class="border border-2 border-start-0 rounded-start mb-1">
                        <h4 class="text-center"><u>@property.Name</u></h4>
                        <ul class="text-center list-group list-group-flush">
                            <li class="list-group-item">@property.Type</li>
                            <li class="list-group-item">@property.PurchaseDate.ToString("dd.MM.yyyy")</li>
                            <li class="list-group-item">@property.InitialCost</li>
                            <li class="list-group-item">@property.priceLossPeriod</li>
                            <li class="list-group-item">@property.PriceLoss</li>
                            <li class="list-group-item">@property.CurrentCost</li>
                        </ul>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
