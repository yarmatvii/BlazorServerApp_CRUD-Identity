<AuthorizeView>
    <Authorized>
        <a class="c" href="Identity/Account/Manage">Hello, @context.User.Identity?.Name!</a>
        <form method="post" action="Identity/Account/Logout">
            <button type="submit" class="c nav-link btn btn-link">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a class="c" href="Identity/Account/Register">Register</a>
        <a class="c" href="Identity/Account/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>
